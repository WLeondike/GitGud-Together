<div class="container bootstrap snippet">

    <div class="row" id="preferences-row">
        <div class="col-sm">
            <h1>User Preferences</h1>
        </div>
    </div>

    <div class="row">

        <div class="col-sm-9" id="preferences-field">

            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <hr>

                    <form class="form" id="registrationForm">

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="steamUsername">
                                    <h4>Steam Username</h4>
                                </label>
                                <input type="text" class="form-control" name="username" id="steamUsername"
                                    placeholder="Steam Username" title="Enter your Steam Username here">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="location">
                                    <h4>What is your location?</h4>
                                </label>
                                <input type="text" class="form-control" name="location" id="location"
                                    placeholder="Enter Location Here" title="Enter your location here">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="currently">
                                    <h4>What are you playing now?</h4>
                                </label>
                                <input type="text" class="form-control" name="currentgame" id="currently"
                                    placeholder="Game you are currently playing" title="Current Game Obsession">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="last_name">
                                    <h4>What are your 5 most favorite games?</h4>
                                </label>
                                {{!-- added class of autocomplete which will be used for suggesting games from the database. --}}
                                <select class="custom-select custom-select-lg mb-3 autoComplete" name="favGame"
                                    id="favoriteGame01">
                                    <option selected>Open this select menu, and type in a game!</option>
                                </select>
                                <select class="custom-select custom-select-lg mb-3 autoComplete" name="favGame"
                                    id="favoriteGame02">
                                    <option selected>Open this select menu, and type in a game!</option>
                                </select>
                                <select class="custom-select custom-select-lg mb-3 autoComplete" name="favGame"
                                    id="favoriteGame03">
                                    <option selected>Open this select menu, and type in a game!</option>
                                </select>
                                <select class="custom-select custom-select-lg mb-3 autoComplete" name="favGame"
                                    id="favoriteGame04">
                                    <option selected>Open this select menu, and type in a game!</option>
                                </select>
                                <select class="custom-select custom-select-lg mb-3 autoComplete" name="favGame"
                                    id="favoriteGame05">
                                    <option selected>Open this select menu, and type in a game!</option>
                                </select>
                                {{!-- Area for data to show up on page for autocomplete --}}
                                <div id="game-suggest"></div>
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <select class="custom-select custom-select-lg mb-3 autoCompleteGenre" name="favGenre"
                                    id="genre">
                                    <option selected>Open this select menu, and type in a genre!</option>
                                </select>
                            </div>

                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="about">
                                    <h4>About Me</h4>
                                </label>
                                <textarea class="form-control" id="about" rows="8" name="aboutMe"
                                    placeholder="Tell Us About Yourself" title="Tell Us About Yourself"></textarea>
                            </div>

                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="achievements">
                                    <h4>What are your achievements?</h4>
                                </label>
                                <input type="text" class="form-control" name="gamerAchievements" id="achievements"
                                    placeholder="Enter your game achievements"
                                    title="Enter your Steam Game Achievements">
                            </div>

                        </div>

                        <div class="col-xs-12">

                            <br>
                            <button class="submitBtn btn btn-lg btn-success" type="submit"><i
                                    class="glyphicon glyphicon-ok-sign"></i> Save</button>

                            <button class="updateBtn btn btn-lg btn-warning" type="submit"><i
                                    class="glyphicon glyphicon-ok-sign"></i> Update</button>

                            <button class="btn btn-lg btn-danger" type="reset"><i
                                    class="glyphicon glyphicon-repeat"></i>
                                Reset</button>
                        </div>
                    </form>
                </div>
                <!--/tab-pane-->
            </div>
            <!--/tab-content-->
        </div>
        <!--/col-9-->
    </div>
    <!--/row-->
</div>
